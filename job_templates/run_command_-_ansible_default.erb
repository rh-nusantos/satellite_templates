<%#
name: Run Command - Ansible Default
snippet: false
template_inputs:
- name: command
  required: true
  input_type: user
  description: "Command to run on the host, e.g: \r\n\r\nmkdir helloworld"
  advanced: false
  value_type: plain
  hidden_value: false
model: JobTemplate
job_category: Ansible Commands
description_format: Run %{command}
provider_type: Ansible
kind: job_template
organizations:
- Home
locations:
- Brussels
%>

---
- hosts: all
  tasks:
    - shell:
        cmd: |
<%=       indent(10) { input('command') } %>
      register: out
    - debug: var=out