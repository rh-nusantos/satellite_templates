<%#
name: Puppet Run Once - Script Default
snippet: false
template_inputs:
- name: puppet_options
  required: false
  input_type: user
  description: Additional options to pass to puppet
  advanced: false
  value_type: plain
  hidden_value: false
model: JobTemplate
job_category: Puppet
description_format: Run Puppet once with "%{puppet_options}"
provider_type: script
kind: job_template
organizations:
- Home
locations:
- Brussels
%>

<% if @host.operatingsystem.family == 'Debian' -%>
export PATH=/opt/puppetlabs/bin:$PATH
<% end -%>
puppet agent --onetime --no-usecacheonfailure --no-daemonize <%= input("puppet_options") %>